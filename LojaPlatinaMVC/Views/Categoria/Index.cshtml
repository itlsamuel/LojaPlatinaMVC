@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-black">Categorias</h2>
        </div>
        <div class="col-6 text-black">
            <a class="btn btn-dark" asp-action="Criar" asp-controller="Categoria"><i class="bi bi-plus-circle"></i>&nbsp;Criar Nova Categoria</a>
        </div>
    </div>
</div>

<h1>Lista de Categorias</h1>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>    
            <th>
                Categorias
            </th>

            <th>
                Mostrar Pedido
            </th>
            <th>
                Editar
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @item.Name
            </td>

            <th>
                @item.MostrarPedido
            </th>
            <td role="group">
                <a class="btn-outline-dark" asp-action="Edit" asp-controller="categoria" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                <a class="btn-outline-dark" asp-action="Delete" asp-controller="categoria" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>

</table>
