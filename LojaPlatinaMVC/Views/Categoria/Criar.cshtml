@model Categoria

@if(TempData["success"]!=null)
{
	<h2>@TempData["success"]</h2>
}

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-black">Categoria</h2>
			<hr/>
		</div>
		<div asp-validation-summary=All></div>
		<div class="row mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>

		</div>
		<div class="row mb-3">
			<label asp-for="MostrarPedido"></label>
			<input asp-for="MostrarPedido" class="form-control"/>
			<span asp-validation-for="MostrarPedido" class="text-danger"></span>
		</div>
		<button class="btn btn-dark" type="submit">Criar</button>
	</div>
	<a class="btn-outline-dark" asp-action="Index" asp-controller="categoria">Voltar</a>

</form>

@section scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}